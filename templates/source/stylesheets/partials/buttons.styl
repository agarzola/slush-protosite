button(dark = false)
  -moz-appearance none
  border-radius $radius
  border none
  box-shadow 0px -1px 1px 0px #FFFFFF, 0px 1px 1px 0px rgba(0,0,0,0.50)
  // box-sizing border-box
  position relative
  if (dark == true) {
    background-image linear-gradient(#1B1B1B 0%, #393939 100%)
  } else {
    background-color lighten($gray, 70%)
  }
  outline none
  &.mute, &.solo
    width 65px
    height 36px
    padding 8px 4px 0
    float left
    margin 0
    font-size 12px
    font-weight bold
    text-align center
    text-transform uppercase
    letter-spacing 2px
    color #fff
    text-shadow none
    &::before
      content " "
      position absolute
      top 8px
      left 5px
      right 5px
      height 2px
      background-color $gray
      border-radius 2px
      transition background-color $anim-snappy ease-out, box-shadow $anim-snappy ease-out
  &.mute
    &::before
      background-color $red-light-dark
      box-shadow 0 0 0 0 rgba(0,0,0,0)
    &.active::before
      background-color $red-light
      box-shadow 0 0 18px 4px $red-light
  &.solo
    float right
    &::before
      background-color $green-light-dark
      box-shadow 0 0 0 0 rgba(0,0,0,0)
    &.active::before
      background-color $green-light
      box-shadow 0 0 18px 4px $green-light

.button
  button()

button::-moz-focus-inner,
input[type="button"]::-moz-focus-inner,
input[type="submit"]::-moz-focus-inner,
input[type="reset"]::-moz-focus-inner,
input[type="range"]::-moz-focus-inner
  padding 0 !important
  border 0 none !important
  outline none !important

header-buttons()
  -webkit-appearance none
  -moz-appearance none
  button(true)
  font-size 12px
  font-weight bold
  text-align center
  text-transform uppercase
  letter-spacing 2px
  color #fff
  text-shadow none
  box-shadow 0px 1px 1px 0px rgba(0,0,0,0.50)
  height 40px
  padding 14px 20px
  margin-top 10px
