.review
  z-index 1
  position fixed
  top 68px
  left 0
  right 0
  bottom 0
  padding 0
  margin 0
  opacity 0
  overflow-x hidden
  overflow-y auto
  background-color #444
  transition opacity $anim-snappy ease
  .review-mode &
    opacity 1
    z-index 2

  .individual-track
    opacity 0
    margin-left -60px
    transition-property opacity, margin-left
    transition-duration 0.2s
    transition-timing-function ease-in-out
    height 120px
    position absolute
    left 0
    right 0
    border-bottom 1px solid lighten($gray, 54%)
    box-sizing border-box
    background-color #e9e9e9
    .review-mode &
      opacity 1
      margin-left 0
    track-animations()
    img
      position absolute
      display block
      top 0
      max-width 100%
      height 100%
      z-index 0
    &::after
      content ""
      display block
      position absolute
      width: 100%
      height: 1px
      background-color #444
      top 59px
    &::before
      content ""
      hostile-takeover()
      z-index 1
      box-shadow 0 20px 100px #c9c9c9 inset

  .track-info
    @extend .mixer .track-info
    bottom initial
    top 0
    left 0
    right initial
    z-index 2

  .position-indicator
    position fixed
    top 68px
    bottom 0
    left 0
    z-index 100
    width 1px
    margin-left 0px
    // background-image linear-gradient(lighten($yellow-light, 50%) 0%, $yellow-light 10%, $yellow-light 100%)
    background-color #444
    box-shadow 0 0 250px 20px #e9e9e9, 0 0 18px #e9e9e9
    // transition left 0.2s ease-out

.annotations
  list-style none
  margin 0
  padding 0
  li
    padding 0
    margin 0
    display block
    position absolute
    top 0
    bottom 0
    z-index 10000
  button
    -webkit-appearance none
    -moz-appearance none
    width 32px
    height 32px
    border-radius 32px
    border none
    position absolute
    top 50%
    margin -16px 0 0 -16px
    left 0
    z-index 1
    outline none
  .annotation-open
    background-image: linear-gradient(-179deg, #FF565F 0%, #A9101B 100%)
    box-shadow: 0px 1px 1px $gray
    color #fff
    font-weight bold
  .annotation-close
    display none
    background-image linear-gradient(#FFFFFF 0%, #DEDEDE 54%, #CDCDCD 100%)
    border 1px solid lighten($gray, 50%)
  .annotation-content
    border-radius $radius
    background-image linear-gradient(#CDCDCD 0%, #DEDEDE 46%, #FFFFFF 100%)
    opacity 0.95
    box-shadow 0px 1px 4px 0px rgba(0,0,0,0.50)
    position absolute
    top 10px
    left 10px
    bottom 10px
    z-index 0
    width 160px
    padding 10px
    display none
    p
      position absolute
      text-indent 0
      margin 0
    .body
      font-size 0.8em
      line-height 1.2em
    .author
      font-size 0.55em
      font-weight bold
      text-transform uppercase
      bottom 0
      left 10px
    .date
      font-size 0.55em
      text-transform uppercase
      bottom 0
      right 10px
